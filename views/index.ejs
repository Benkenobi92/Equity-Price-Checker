<%-include("partials/header.ejs")%>

    <body>
        <div class="container text-center">
            <div class="row">

                <div class="col equity-checker">
                    <h2>Price Check</h2>

                    <div>
                        <form action="/submit" method="POST">
                            <p>Symbol</p>
                            <input class="form-control" type="text" name="symbol" aria-label="default">
                            <p>Interval</p>
                            <select class="form-select form-select-sm" aria-label="Small select example" name="interval"
                                placeholder="Interval">
                                <option value="1min">1 Minute</option>
                                <option value="5min">5 Minute</option>
                                <option value="15min">15 Minute</option>
                                <option value="30min">30 Minute</option>
                                <option value="60min">1 Hour</option>
                            </select>
                            <div class="col-auto get-price">
                                <button type="submit" class="btn btn-light">Get Price</button>
                            </div>
                        </form>
                    </div>

                </div>

            </div>
            
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
            </script>
    </body>

